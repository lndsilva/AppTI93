<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PetsActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/idToolBarpets"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_baseline_arrow_back"
            app:title="Meus Pets" />

    </com.google.android.material.appbar.AppBarLayout>


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/idTabPets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/idTabItemCachorro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cachorro" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/idTabItemGato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gato" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/idTabItemPeixe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Peixe" />

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/idViewPagerPets"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>